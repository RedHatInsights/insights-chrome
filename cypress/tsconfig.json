{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "removeComments": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "types": ["cypress", "node"]
  },
  "include": ["../src/**/*.ts", "../src/**/*.tsx", "./components/**/*.cy.tsx"],
  "exclude": [
    "../src/**/*.test.ts",
    "../src/**/*.test.tsx",
    "../src/**/*.spec.tsx",
    "../src/**/*.spec.ts",
    "../src/**/__mocks__/**/*.ts",
    "../src/**/__mocks__/**/*.tx",
  ]
}
